@model StudentDiary.Models.Student

<h2>@Model.FirstName @Model.LastName</h2>
<p>Age: @Model.Age</p>
<p>Date of Birth: @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>

<h3>Grades</h3>
<table class="table">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Grade</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model.Grades)
        {
            <tr>
                <td>@grade.Subject</td>
                <td>@grade.GradeValue</td>
                <td>@grade.Date.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
